                <small class="form-text text-muted text-left"> <a href="/resetPassword"><u>Forgot Password?</u></a></small>
            </form>
            <br>
            <!-- links log in submit button to one health website -->
            <form action="/home">
                <button type="submit" class="submitButton btn-block">Submit</button>
            </form>
        </form>
        <!-- links register.ejs to "New to One Health? Sign Up" -->
        <form action="registration">
            <br>
            <p> New to One Health? <a href="/register"><u>Sign Up</u></a></p>
        </form>
    </div>
</div>

