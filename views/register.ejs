    <!-- sign up container -->
    <div class="container">
        <div class="title">Sign Up</div>
        <form action="register.php" method="post">
            <div class="user-info">
                <div class="info">
                    <span class="infoTitle">First Name</span>
                    <input type="text" id="firstName" name="firstName" placeholder="first name" required>
                </div>
                <div class="info">
                    <span class="infoTitle">Last Name</span>
                    <input type="text" id="lastName" name="lastName" placeholder="last name" required>
                </div>
                <div class="info">
                    <span class="infoTitle">Email</span>
                    <input type="email" id="email" name="email" placeholder="email" required>
                </div>
                <div class="info">
                    <span class="infoTitle">Password</span>
                    <input type="password" id="password" name="password" placeholder="password" required>
                </div>
                <div class="info">
                    <span class="infoTitle">Confirm Password</span>
                    <input type="password" id="passwordConfirm" name="passwordConfirm" placeholder="confirm password" required>
                </div>
